  <xacro:property name="joint_offset_4_y" value="0.299" />  
  <xacro:property name="joint_offset_4_x" value="0.070" />  	
  <xacro:property name="j2l_offset4" value="0.135" />
  
  <xacro:property name="radius5" value="0.05" />
  <xacro:property name="height5" value="0.1" /> <!-- Link 2 -->
  <xacro:property name="joint_offset_5" value="0.0" />
  <xacro:property name="j2l_offset5" value="0.12" />
  
  <xacro:property name="radius6" value="0.03" />   
  <xacro:property name="height6" value="0.08" /> <!-- Link 6 -->
  <xacro:property name="joint_offset_6" value="0.0" />
  <xacro:property name="j2l_offset6" value="0.09" />
  
  <xacro:property name="width_tool" value="0.03" />
