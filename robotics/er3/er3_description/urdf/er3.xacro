  <xacro:property name="height_tool" value="0.08" />   
  <xacro:property name="joint_offset_tool" value="0.16" />
  
  <xacro:property name="width_end" value="0.03" />
  <xacro:property name="length_end" value="0.03" />
  <xacro:property name="height_end" value="0.03" />   
  <xacro:property name="joint_offset_end" value="0.04" />
  
  <xacro:property name="height7" value="0.1" /> <!-- Link 7 -->
  <xacro:property name="eef_height1" value="0.1" /> <!-- Link eef -->
  <xacro:property name="camera_height" value="0.05" /> <!-- Link camera -->
  <xacro:property name="camera_width" value="0.05" /> <!-- Link camera -->
