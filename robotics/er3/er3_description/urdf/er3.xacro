<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="er3">


  <!-- Constants for robot dimensions -->
  <xacro:property name="PI" value="3.1415926535897931"/>
  <xacro:property name="base_radius" value="0.07" />
  <xacro:property name="joint_offset_base" value="0.0" /> 
  
  <xacro:property name="radius1" value="0.07" /> <!-- Link 1 -->
  <xacro:property name="height1" value="0.12" />
  <xacro:property name="joint_offset_1" value="0.0" />
  <xacro:property name="j2l_offset1" value="0.0" />
  
  <xacro:property name="length2" value="0.08" />
  <xacro:property name="width2" value="0.14" />  
  <xacro:property name="height2" value="0.12" /> <!-- Link 2 -->
  <xacro:property name="joint_offset_2_x" value="0.050" />
  <xacro:property name="joint_offset_2_z" value="0.3215" />
  <xacro:property name="j2l_offset2" value="0.12" />
  
  <xacro:property name="length3" value="0.10" />
