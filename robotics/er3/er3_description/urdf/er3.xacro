    </inertial>
  </link>

  <!-- Joint 7-->
  <joint name="joint_7" type="fixed">
    <parent link="link_6"/>
    <child link="link_end"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  
  <!-- Link end-->
  <link name="link_end">
    <collision>
      <origin rpy="0.0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.0" radius = "0.0"/>
